<Window x:Class="ISBiblioteka.Izdavanje"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:local="clr-namespace:ISBiblioteka"
        mc:Ignorable="d"
        Title="Izdavanje" Height="500" Width="1350"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="7"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"        
        Background="{DynamicResource MaterialDesignPaper}"
        MinWidth="700" MinHeight="500"
        FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="163*"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="127*"/>
        </Grid.RowDefinitions>

        <ListView x:Name="izdavanjeListView" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="5" Grid.RowSpan="11">
            <ListView.View>
                <GridView>
                    <GridViewColumn
                        Width="50"
                        DisplayMemberBinding="{Binding id}"
                        Header="ID" />
                    <GridViewColumn
                        DisplayMemberBinding="{Binding isbn}"
                        Header="ISBN" />
                    <GridViewColumn
                        DisplayMemberBinding="{Binding naziv}"
                        Header="Naziv" />
                    <GridViewColumn
                        DisplayMemberBinding="{Binding autor}"
                        Header="Autor" />
                    <GridViewColumn
                        DisplayMemberBinding="{Binding kategorija}"
                        Header="Kategorija" />
                    <GridViewColumn
                        DisplayMemberBinding="{Binding format}"
                        Header="Format" />
                    <GridViewColumn
                        DisplayMemberBinding="{Binding izdavac}"
                        Header="Izdavač" />
                    <GridViewColumn
                        DisplayMemberBinding="{Binding kolicina}"
                        Header="Broj kopija" />
                    <GridViewColumn
                        DisplayMemberBinding="{Binding dostupno}"
                        Header="Dostupno" />
                    
                    <GridViewColumn
                        DisplayMemberBinding="{Binding datumIzdavanja}"
                        Header="Datum štampe" />
                    <GridViewColumn
                        Width="100"
                        DisplayMemberBinding="{Binding opis}"
                        Header="Opis" />
                    
                </GridView>
            </ListView.View>
        </ListView>

        <Button x:Name="Dugme_Obrisi" Grid.Row="11" Grid.Column="0" Style="{StaticResource MaterialDesignRaisedLightButton}" Width="100" ToolTip="Brisanje knjige" Click="Dugme_Obrisi_Click" >
            OBRIŠI
        </Button>
        <Button x:Name="Dugme_Osvezi" Grid.Row="11" Grid.Column="1" Style="{StaticResource MaterialDesignRaisedLightButton}" Width="100" ToolTip="Osvežavanje liste" Click="Dugme_Osvezi_Click">
            OSVEŽI
        </Button>
        
        <Button x:Name="Dugme_Izdaj" Grid.Row="11" Grid.Column="4" Style="{StaticResource MaterialDesignRaisedButton}" Width="100" ToolTip="Izdaj" Click="Dugme_Izdaj_Click">
            IZDAJ
        </Button>
        <Button x:Name="Dugme_Otkazi" Grid.Row="11" Grid.Column="3" Style="{StaticResource MaterialDesignRaisedLightButton}" Width="100" ToolTip="Otkaži" Click="Dugme_Otkazi_Click">
            OTKAŽI
        </Button>
        

    </Grid>
</Window>
